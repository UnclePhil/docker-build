# pull base image
FROM alpine

# Labels.
LABEL maintainer="ph.koenig@koenig.ph" \
    org.label-schema.name="unclephil/ansible" \
    org.label-schema.description="Ansible inside Docker" \
    org.label-schema.docker.cmd="docker run --rm -it -v $(pwd):/ansible -v $SSH_AUTH_SOCK:/tmp/ssh.sck -e SSH_AUTH_SOCK=/tmp/ssh.sck unclephil/ansible"

RUN apk --no-cache add \
        sudo \
        bash \
        python3\
        py3-pip \
        openssl \
        ca-certificates \
        sshpass \
        openssh-client \
        rsync \
        git && \
    apk --no-cache add --virtual build-dependencies \
        python3-dev \
        libffi-dev \
        openssl-dev \
        build-base && \
    pip3 install --upgrade pip cffi && \
    pip3 install ansible && \
    pip3 install mitogen ansible-lint && \
    pip3 install --upgrade pywinrm && \
    apk del build-dependencies && \
    rm -rf /var/cache/apk/*

RUN mkdir /ansible && \
    mkdir -p /etc/ansible && \
    echo 'localhost' > /etc/ansible/hosts
    
ENV PATH /usr/bin:$PATH

WORKDIR /ansible
ENTRYPOINT ["/bin/sh"]